# Enable BLE
CONFIG_BT_ENABLED=y
CONFIG_BT_BLUEDROID_ENABLED=y

# BLE controller mode
CONFIG_BTDM_CTRL_MODE_BLE_ONLY=y

# BLE client settings
CONFIG_BT_GATTC_ENABLE=y
CONFIG_BT_GATTC_CACHE_NVS_FLASH=n

# BLE Security features
CONFIG_BT_BLE_SMP_ENABLE=y

# Log levels
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# Power saving
CONFIG_PM_ENABLE=n
